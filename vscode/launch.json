{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Attach: Docker Container",
        "type": "remote",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "redirectOutput": true,
        "console": "integratedTerminal",
        "justMyCode": true,
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app"
          }
        ]
      }
    ]
  }
